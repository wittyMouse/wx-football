/* components/wm-navigation-bar/index.wxss */
.wm-navigation-bar {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  width: 100%;
  height: 100rpx;
}

.wm-navigation-bar-background {
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  width: 100%;
  height: 100rpx;
}

.wm-navigation-bar-status {
  background-color: #fff;
}

.wm-navigation-bar-title {
  display: inline-block;
  width: 502rpx;
  font-size: 36rpx;
  text-align: center;
  line-height: 80rpx;
  vertical-align: top;
}

.wm-navigation-bar-logo,
.wm-navigation-bar-back,
.wm-navigation-bar-car {
  display: inline-block;
  width: 124rpx;
  vertical-align: top;
}

.wm-navigation-bar-logo .wm-navigation-bar-logo-image {
  display: block;
  width: 108rpx;
  height: 88rpx;
  margin-left: 14rpx;
  margin-top: 4rpx;
}

.wm-navigation-bar-back .wm-navigation-bar-back-image,
.wm-navigation-bar-car .wm-navigation-bar-car-image {
  display: block;
  margin: 10rpx 0 0 24rpx;
  width: 80rpx;
  height: 80rpx;
}
