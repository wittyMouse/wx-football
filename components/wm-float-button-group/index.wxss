/* components/wm-float-button-group/index.wxss */
.wm-float-button-group {
  position: fixed;
  bottom: 15%;
  right: 8rpx;
  z-index: 10;
  padding-top: 8rpx;
  width: 88rpx;
  border-radius: 44rpx;
  background-color: rgba(0, 0, 0, 0.3);
}

.wm-float-button-group__button {
  margin: 0 auto 8rpx;
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background-color: #fff;
}

.wm-float-button-group__image {
  display: block;
  width: 100%;
  height: 100%;
}
