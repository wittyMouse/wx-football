/* pages/latest-clue/detail/index.wxss */
.latest-clue-detail-scroll-view {
  background-color: #ebecf1;
  padding-bottom: env(safe-area-inset-bottom);
  box-sizing: border-box;
}

.latest-clue-detail-header {
  font-size: 36rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
}

.latest-clue-detail-article {
  width: 100%;
  padding: 20rpx 2%;
  box-sizing: border-box;
}

.article-card {
  border-radius: 12rpx;
  background-color: #fff;
}

.article-card-header {
  position: relative;
  padding: 40rpx 2.5% 20rpx;
  box-sizing: border-box;
}

.article-card-header::after {
  content: " ";
  display: block;
  position: absolute;
  top: -50%;
  right: -50%;
  bottom: -50%;
  left: -50%;
  border-bottom: 1px solid #ddd;
  -webkit-transform-origin: center;
  transform-origin: center;
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
  pointer-events: none;
  box-sizing: border-box;
}

.article-card-title {
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  line-height: 40rpx;
  color: #e00;
}

.article-card-description {
  padding-top: 20rpx;
  font-size: 24rpx;
  font-weight: normal;
  text-align: center;
  line-height: 40rpx;
  color: #aaa;
}

.article-card-content {
  padding: 20rpx 2.5%;
}

.article-card-article {
  text-align: center;
}

.article-card-article-line-1 {
  height: 140rpx;
  font-size: 28rpx;
  line-height: 60rpx;
  color: #e00;
}

.article-card-article-line-2 {
  height: 120rpx;
  font-size: 28rpx;
  line-height: 60rpx;
}

.article-card-button {
  position: relative;
  margin: 60rpx 0;
  padding: 0;
  width: 100% !important;
  height: 84rpx;
  border-radius: 10rpx;
  font-size: 36rpx;
  font-weight: normal;
  text-align: center;
  line-height: 84rpx;
  color: #fff;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  background-color: #e00;
}

.article-card-button:after {
  content: " ";
  display: block;
  position: absolute;
  top: -50%;
  right: -50%;
  bottom: -50%;
  left: -50%;
  border: 1px solid rgba(0, 0, 0, 0.2);
  border-radius: 20rpx;
  -webkit-transform-origin: center;
  transform-origin: center;
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
  pointer-events: none;
  box-sizing: border-box;
}

.tips-modal-wrapper {
}

.tips-modal-mask {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1999;
  background-color: rgba(0, 0, 0, 0.7);
}

.tips-modal {
  position: fixed;
  top: 50%;
  left: 95rpx;
  z-index: 2000;
  padding: 16rpx;
  width: 560rpx;
  border-radius: 12rpx;
  box-sizing: border-box;
  background-color: #fff;
  transform: translateY(-50%);
}

.tips-modal-header {
}

.tips-modal-title {
  margin-bottom: 24rpx;
  border-radius: 12rpx;
  font-size: 36rpx;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  background-color: #888;
}

.tips-modal-content {
  padding-bottom: 20rpx;
  font-size: 27rpx;
  text-align: center;
  color: #666;
  line-height: 1.6;
}

.tips-modal-footer {
}

.tips-modal-button {
  margin: 0 auto;
  width: 60%;
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  text-align: center;
  color: #fff;
  line-height: 80rpx;
  background-color: #d00;
}
