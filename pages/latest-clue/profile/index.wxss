/* pages/latest-clue/profile/index.wxss */
.latest-clue-scroll-view {
  background-color: #ebecf1;
  padding-bottom: env(safe-area-inset-bottom);
  box-sizing: border-box;
}

.latest-clue-header {
  font-size: 36rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
}

.latest-clue-block {
  width: 100%;
  padding: 20rpx 2%;
  box-sizing: border-box;
}

.latest-clue-card {
  display: flex;
  padding: 20rpx 0;
  border-radius: 12rpx;
  background-color: #fff;
  box-shadow: 0 0 12rpx #d0d0d0;
}

.latest-clue-card-layout-left {
  width: 216rpx;
  padding: 20rpx 0 52rpx;
  box-sizing: border-box;
}

.latest-clue-card-chart {
  position: relative;
  text-align: center;
}

.latest-clue-card-pie-chart {
}

.latest-clue-card-pie-chart .wm-pie-chart-percentage {
  z-index: 5;
}

.latest-clue-card-avatar {
  position: absolute;
  top: 12rpx;
  left: 50%;
  width: 128rpx;
  height: 128rpx;
  border: 8rpx solid #fff;
  border-radius: 50%;
  transform: translateX(-50%);
}

.latest-clue-card-avatar-image {
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.latest-clue-card-layout-right {
  padding-right: 20rpx;
  width: calc(100% - 216rpx);
  box-sizing: border-box;
}

.latest-clue-card-description {
  padding: 8rpx 16rpx 0;
  font-size: 24rpx;
  color: #888;
  line-height: 32rpx;
}

.latest-clue-author {
}

.latest-clue-nav-bar {
  position: relative;
  display: flex;
  align-items: center;
  width: 100%;
  height: 80rpx;
  background-color: #fff;
}

.latest-clue-nav-bar::after {
  content: " ";
  display: block;
  position: absolute;
  top: -50%;
  right: -50%;
  bottom: -50%;
  left: -50%;
  border-bottom: 1px solid #ccc;
  -webkit-transform-origin: center;
  transform-origin: center;
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
  pointer-events: none;
  box-sizing: border-box;
}

.latest-clue-nav-item {
  position: relative;
  margin: 0 8rpx;
  width: calc(100% / 3 - 16rpx);
  height: 68rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
  line-height: 68rpx;
  color: #fff;
  background-color: #e00;
}

.latest-clue-nav-item::after {
  content: " ";
  display: block;
  position: absolute;
  top: -50%;
  right: -50%;
  bottom: -50%;
  left: -50%;
  border-radius: 24rpx;
  border: 1px solid #e00;
  -webkit-transform-origin: center;
  transform-origin: center;
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
  pointer-events: none;
  box-sizing: border-box;
}

.latest-clue-nav-item.active {
  color: #fff;
  background-color: #900;
}

.latest-clue-nav-item.active::after {
  border: 1px solid #900;
}

.latest-clue-author-list {
  position: relative;
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx 0;
  box-sizing: border-box;
  background-color: #fff;
}

.latest-clue-author-list::after {
  content: " ";
  display: block;
  position: absolute;
  top: -50%;
  right: -50%;
  bottom: -50%;
  left: -50%;
  border-bottom: 1px solid #ccc;
  -webkit-transform-origin: center;
  transform-origin: center;
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
  pointer-events: none;
  box-sizing: border-box;
}

.latest-clue-author-item {
  display: inline-block;
  width: 25%;
  height: 220rpx;
}

.latest-clue-author-avatar {
  margin: 0 auto;
  width: 60px;
  height: 60px;
}

.latest-clue-author-avatar-image {
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.latest-clue-author-name {
  font-size: 24rpx;
  text-align: center;
  color: #555;
}

.latest-clue-list {
}

.latest-clue-item {
  padding: 20rpx;
}

.latest-clue-item:nth-child(odd) {
  background-color: #fff;
}

.latest-clue-item-content {
  font-size: 28rpx;
  color: #333;
}

.latest-clue-item-title-text {
  font-size: 28rpx;
  color: #888;
}

.latest-clue-item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8rpx 0 0;
}

.latest-clue-item-footer-text {
  font-size: 24rpx;
  color: #aaa;
  line-height: 32rpx;
}

.latest-clue-empty {
  padding: 40rpx 0;
  font-size: 32rpx;
  text-align: center;
  line-height: 1.6;
}

.latest-clue-load-more,
.latest-clue-no-data {
  padding: 40rpx 0;
  width: 100%;
  font-size: 28rpx;
  text-align: center;
  color: #888;
}
