.bar-chart-zhong {
  background-color: #c7000b;
}

.bar-chart-zou {
  background-color: #7fedbd;
}

.bar-chart-fu {
  background-color: #5b5b5b;
}

.wm-ranking-chart-card-layout-right {
  display: flex;
  position: absolute;
  top: 24rpx;
  right: 0;
  width: calc(100% - 216rpx);
  margin-left: 216rpx;
  box-sizing: border-box;
}

.wm-ranking-chart-card-layout-right::after {
  content: " ";
  display: block;
  position: absolute;
  top: -50%;
  right: -50%;
  bottom: -50%;
  left: -50%;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  -webkit-transform-origin: center;
  transform-origin: center;
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
  pointer-events: none;
  box-sizing: border-box;
}

.wm-ranking-chart-card-grid {
  flex: 1 0 auto;
  position: relative;
  width: calc(100% / 10);
  height: 1400rpx;
  font-size: 20rpx;
  color: #aaa;
}

.wm-ranking-chart-card-grid::before {
  content: " ";
  display: block;
  position: absolute;
  top: -50%;
  right: -50%;
  bottom: -50%;
  left: -50%;
  border-left: 1px solid #ededed;
  -webkit-transform-origin: center;
  transform-origin: center;
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
  pointer-events: none;
  box-sizing: border-box;
}
