/* pages/user-center/index.wxss */
.user-center-scroll-view {
  background-color: #ebecf1;
  padding-bottom: env(safe-area-inset-bottom);
  box-sizing: border-box;
}

.user-center-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.user-center-header-layout-left {
  font-size: 24rpx;
  color: #fff;
  line-height: 80rpx;
}

.user-center-header-layout-right {
  font-size: 24rpx;
  color: #fff;
}

.text-strong {
  font-size: 36rpx;
}

.user-center-panel {
}

.user-center-panel-header {
}

.user-center-panel-header .title-1,
.user-center-panel-header .title-2,
.user-center-panel-header .title-3 {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-indent: 80rpx;
  font-size: 32rpx;
  color: #555;
  background-repeat: no-repeat;
  background-position: 20rpx center;
  background-size: 48rpx;
}

.user-center-panel-header .title-1 {
  background-image: url("https://www.df1668.com/images/icon-m07.png");
}

.user-center-panel-header .title-2 {
  background-image: url("https://www.df1668.com/images/icon-m05.png");
}

.user-center-panel-header .title-3 {
  background-image: url("https://www.df1668.com/images/icon-m06.png");
}

.user-center-panel-content {
}

.user-center-welcome {
  padding: 12rpx 24rpx;
  background-color: #fff;
}

.user-center-welcome-text {
  font-size: 28rpx;
  line-height: 1.6;
}

.user-center-welcome-text .text-1 {
  font-size: 32rpx;
  color: #e00;
}

.user-center-welcome-text .text-2 {
  font-size: 32rpx;
  color: #093;
}

.user-center-check-in-box {
  background-image: url("https://www.df1668.com/images/bg-qiandao.png");
  background-repeat: no-repeat;
  background-position: center;
  background-size: 100% auto;
}

.user-center-check-in-box-header {
  padding: 20rpx 0;
  text-align: center;
  line-height: 1.6;
}

.user-center-check-in-box-content {
  display: flex;
  padding: 0 30rpx;
}

.coin-block {
  position: relative;
  flex: 1 0 auto;
}

.coin-block:not(:last-child)::after {
  content: " ";
  position: absolute;
  top: 36rpx;
  right: -6rpx;
  width: 12rpx;
  height: 4rpx;
  background-color: #ccc;
}

.coin-wrapper {
  display: block;
  margin: 0 auto;
  width: 72rpx;
  height: 72rpx;
}

.coin-image {
  display: block;
  width: 100%;
  height: 100%;
}

.coin-text {
  font-size: 28rpx;
  text-align: center;
  line-height: 1.6;
}

.user-center-check-in-box-footer {
  padding: 20rpx 0;
}

.user-center-check-in-box-text {
  font-size: 32rpx;
  font-weight: bolder;
}

.user-center-check-in-box-tips {
  font-size: 24rpx;
  color: #888;
}

.user-center-check-in-box-button {
  margin: 0 auto !important;
  padding: 0;
  width: 200rpx !important;
  height: 72rpx;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: normal;
  text-align: center;
  color: #fff;
  line-height: 72rpx;
  background-color: #e00;
}

.user-center-nav-bar {
  position: relative;
  background-color: #fff;
}

.user-center-nav-bar::after {
  content: " ";
  display: block;
  position: absolute;
  top: -50%;
  right: -50%;
  bottom: -50%;
  left: -50%;
  border-top: 1px solid #ddd;
  border-left: 1px solid #ddd;
  -webkit-transform-origin: center;
  transform-origin: center;
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
  pointer-events: none;
  box-sizing: border-box;
}

.user-center-nav-item {
  display: inline-block;
  position: relative;
  width: calc(100% / 3);
  height: 80rpx;
  font-size: 28rpx;
  text-align: center;
  color: #555;
  line-height: 80rpx;
}

.user-center-nav-item::after {
  content: " ";
  display: block;
  position: absolute;
  top: -50%;
  right: -50%;
  bottom: -50%;
  left: -50%;
  border-bottom: 1px solid #ddd;
  border-right: 1px solid #ddd;
  -webkit-transform-origin: center;
  transform-origin: center;
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
  pointer-events: none;
  box-sizing: border-box;
}

.user-center-nav-item .strong-text {
  font-weight: bold;
  color: #e00;
}

.user-center-nav-bar-message {
  position: absolute;
  right: 4rpx;
  top: 4rpx;
  width: 36rpx;
  height: 36rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 36rpx;
  color: #fff;
  background-color: #e00;
}

.user-center-article-list {
}

.user-center-article-item {
  display: flex;
  position: relative;
  padding: 0 32rpx 0 56rpx;
  background-image: url("https://www.df1668.com/images/icon-jt03.png");
  background-repeat: no-repeat;
  background-position: 24rpx center;
  background-size: 10rpx auto;
}

.user-center-article-item:nth-child(odd) {
  background-color: #fff;
}

.user-center-article-text {
  flex: 1 0 auto;
  font-size: 28rpx;
  color: #555;
  line-height: 80rpx;
}

.user-center-article-time {
  flex: 0 0 auto;
  font-size: 24rpx;
  color: #999;
  line-height: 80rpx;
}
