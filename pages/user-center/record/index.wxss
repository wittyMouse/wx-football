/* pages/user-center/record/index.wxss */
.record-scroll-view {
  background-color: #ebecf1;
}

.record-header {
  font-size: 36rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
}

.record-welcome {
  padding: 12rpx 24rpx;
  background-color: #fff;
}

.record-welcome-text {
  font-size: 28rpx;
  line-height: 1.6;
}

.record-welcome-text .text-1 {
  font-size: 32rpx;
  color: #e00;
}

.record-welcome-text .text-2 {
  font-size: 32rpx;
  color: #093;
}

.record-list {

}

.record-item {
  display: flex;
  position: relative;
  padding: 18rpx 0;
}

.record-item:nth-child(odd) {
  background-color: #fff;
}

.record-item::after {
  content: " ";
  display: block;
  position: absolute;
  top: -50%;
  right: -50%;
  bottom: -50%;
  left: -50%;
  border-bottom: 1px solid #ddd;
  -webkit-transform-origin: center;
  transform-origin: center;
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
  pointer-events: none;
  box-sizing: border-box;
}

.record-item-layout-left {
  flex: 0 0 10%;
  text-align: center;
  line-height: 0;
}

.record-item-layout-right {
  flex: 0 0 90%;
  line-height: 1.6;
}

.record-item-line {
  font-size: 28rpx;
}

.record-item-line.inline {
  display: inline-block;
  /* vertical-align: middle; */
}

.record-item-line.inline + .record-item-line.inline {
  margin-left: 32rpx;
}

.record-empty {
  padding: 40rpx 0;
  font-size: 32rpx;
  text-align: center;
  line-height: 1.6;
}

.record-load-more-tips {
  position: relative;
  /* margin: 0 auto;
  padding: 40rpx 0; */
  margin: 40rpx auto;
  width: 80%;
  height: 80rpx;
  font-size: 28rpx;
  text-align: center;
  line-height: 80rpx;
  color: #888;
  background-color: #f5f5f5;
}

.record-load-more-tips::after {
  content: " ";
  display: block;
  position: absolute;
  top: -50%;
  right: -50%;
  bottom: -50%;
  left: -50%;
  border: 1px solid #ccc;
  -webkit-transform-origin: center;
  transform-origin: center;
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
  pointer-events: none;
  box-sizing: border-box;
}

.record-load-more,
.record-no-data {
  padding: 40rpx 0;
  width: 100%;
  font-size: 28rpx;
  text-align: center;
  color: #888;
}

.record-bottom-bar-placeholder {
  width: 100%;
  height: 88rpx;
}

.record-bottom-bar {
  display: flex;
  align-items: center;
  position: fixed;
  width: 100%;
  font-size: 24rpx;
  background-color: #eee;
  box-sizing: border-box;
}

.record-bottom-bar::after {
  content: " ";
  display: block;
  position: absolute;
  top: -50%;
  right: -50%;
  bottom: -50%;
  left: -50%;
  border-top: 1px solid #ccc;
  -webkit-transform-origin: center;
  transform-origin: center;
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
  pointer-events: none;
  box-sizing: border-box;
}

.record-bottom-bar-safe {
  padding-bottom: env(safe-area-inset-bottom);
}

.record-bottom-bar-item {
  flex: 0 0 auto;
  line-height: 88rpx;
}

.record-bottom-bar-item:nth-of-type(1) {
  width: 140rpx;
  font-size: 0;
  text-align: center;
}

.record-bottom-bar-item:nth-of-type(3) {
  flex: 1 0 auto;
  padding-right: 20rpx;
  text-align: right;
}

.record-bottom-bar-checkbox .wm-checkbox-inner {
  width: 26rpx;
  height: 26rpx;
}

.record-bottom-bar-checkbox .wm-checkbox-text {
  margin-left: 16rpx;
  font-size: 24rpx;
  color: #000;
  line-height: inherit;
}

.record-bottom-bar-button {
  position: relative;
  display: block;
  margin: 0 auto;
  padding: 0;
  width: 98rpx !important;
  height: 52rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  font-weight: normal;
  color: #fff;
  line-height: 52rpx;
  background-color: #888;
}

.record-bottom-bar-button::after {
  content: ' ';
  display: block;
  position: absolute;
  top: -50%;
  right: -50%;
  bottom: -50%;
  left: -50%;
  border: 1px solid rgba(0, 0, 0, .2);
  border-radius: 20rpx;
  -webkit-transform-origin: center;
  transform-origin: center;
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
  pointer-events: none;
  box-sizing: border-box;
}
