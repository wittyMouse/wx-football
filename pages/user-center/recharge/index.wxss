.recharge-button {
  display: block;
  margin: 24rpx auto 0;
  padding: 0;
  width: 60% !important;
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 36rpx;
  font-weight: normal;
  text-align: center;
  line-height: 88rpx;
  color: #fff;
  background-color: #e00;
}
