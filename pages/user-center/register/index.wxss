/* pages/user-center/register/index.wxss */
.register-scroll-view {
  background-color: #ebecf1;
  padding-bottom: env(safe-area-inset-bottom);
  box-sizing: border-box;
}

.register-header {
  font-size: 36rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
}

.register-form {
  background-color: #fff;
}

.register-form-item {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.register-form-label {
  flex: 0 0 auto;
  padding: 0 20rpx 0 0;
  width: 170rpx;
  font-size: 28rpx;
  text-align: right;
  box-sizing: border-box;
}

.register-form-required {
  font-size: 28rpx;
  color: #f50;
}

.register-form-value {
  flex: 1 0 auto;
}

.register-form-input {
  position: relative;
  padding: 0 20rpx;
  width: 520rpx;
  height: 80rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #555;
  box-sizing: border-box;
}

.register-form-input::after {
  content: ' ';
  display: block;
  position: absolute;
  top: -50%;
  right: -50%;
  bottom: -50%;
  left: -50%;
  border-radius: 10rpx;
  border: 1px solid #ddd;
  -webkit-transform-origin: center;
  transform-origin: center;
  -webkit-transform: scale(.5);
  transform: scale(.5);
  pointer-events: none;
  box-sizing: border-box;
}

.register-form-item.mobile .register-form-input {
  display: inline-block;
  width: 300rpx;
  vertical-align: middle;
}

.register-form-mobile {
  display: inline-block;
  margin-left: 10rpx;
  width: 210rpx;
  height: 70rpx;
  border-radius: 10rpx;
  vertical-align: middle;
  font-size: 28rpx;
  text-align: center;
  line-height: 70rpx;
  color: #fff;
  background-color: #e00;
}

.mobile-button {
  background-color: #900;
}

