.register-form-text {
  width: 100%;
  padding: 0 30rpx 12rpx;
  font-size: 28rpx;
  text-align: right;
  color: #999;
  box-sizing: border-box;
}

.register-form-button {
  display: block;
  margin: 0;
  padding: 0;
  width: 100% !important;
  height: 92rpx;
  border-radius: 10rpx;
  font-size: 36rpx;
  font-weight: normal;
  text-decoration: none;
  color: #fff;
  line-height: 92rpx;
  background-color: #ee0000;
}

.tips-modal-wrapper {
}

.tips-modal-mask {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1999;
  background-color: rgba(0, 0, 0, 0.7);
}

.tips-modal {
  position: fixed;
  top: 40%;
  left: 95rpx;
  z-index: 2000;
  padding: 16rpx;
  width: 560rpx;
  border-radius: 12rpx;
  box-sizing: border-box;
  background-color: #fff;
  transform: translateY(-50%);
}

.tips-modal-header {
}

.tips-modal-title {
  border-radius: 12rpx;
  font-size: 36rpx;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  background-color: #888;
}

.tips-modal-content {
  padding: 32rpx 0;
  font-size: 27rpx;
  text-align: center;
  color: #666;
  line-height: 1.6;
}

.tips-modal-footer {
}

.tips-modal-button {
  margin: 0 auto !important;
  padding: 0;
  width: 60% !important;
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: normal;
  text-align: center;
  color: #fff;
  line-height: 80rpx;
  background-color: #d00;
}

.captcha-form {
  display: flex;
  align-items: center;
}

.captcha-form-label {
  flex: 0 0 auto;
  padding: 0 10rpx 0 0;
  width: 120rpx;
  font-size: 28rpx;
  text-align: right;
  box-sizing: border-box;
}

.captcha-form-value {
  flex: 1 0 auto;
}

.captcha-form-input {
  position: relative;
  display: inline-block;
  padding: 0 20rpx;
  width: 230rpx;
  height: 66rpx;
  border-radius: 10rpx;
  text-align: left;
  vertical-align: middle;
  box-sizing: border-box;
}

.captcha-form-input::after {
  content: ' ';
  display: block;
  position: absolute;
  top: -50%;
  right: -50%;
  bottom: -50%;
  left: -50%;
  border-radius: 10rpx;
  border: 1px solid #ddd;
  -webkit-transform-origin: center;
  transform-origin: center;
  -webkit-transform: scale(.5);
  transform: scale(.5);
  pointer-events: none;
  box-sizing: border-box;
}

.captcha-form-captcha {
  margin-left: 10rpx;
  width: 168rpx;
  height: 56rpx;
  vertical-align: middle;
}
