/* pages/tips/index.wxss */
.tips-scroll-view {
  background-color: #ebecf1;
  padding-bottom: env(safe-area-inset-bottom);
  box-sizing: border-box;
}

.tips-header {
  font-size: 36rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
}

.tips-content {
  padding-top: 72rpx;
}

.tips-icon-block {
  margin-bottom: 60rpx;
  text-align: center;
}

.tips-icon {
}

.tips-text {
  margin-bottom: 50rpx;
  padding: 0 40rpx;
  text-align: center;
}

.tips-title {
  font-size: 40rpx;
  font-weight: 400;
  line-height: 1.6;
}

.tips-description {
  margin-top: 10rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #888;
}

.tips-button-group {
  padding: 0 30rpx;
}

.tips-button {
  position: relative;
  display: block;
  margin: 0;
  padding: 0;
  width: 100% !important;
  height: 84rpx;
  border-radius: 10rpx;
  font-size: 36rpx;
  font-weight: normal;
  text-align: center;
  text-decoration: none;
  line-height: 84rpx;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  overflow: hidden;
  color: #454545;
  background-color: #f7f7f7;
}

.tips-button + .tips-button {
  margin-top: 30rpx;
}

.tips-button:first-child {
  color: #fff;
  background-color: #ee0000;
}

.tips-button::after {
  content: " ";
  display: block;
  position: absolute;
  top: -50%;
  right: -50%;
  bottom: -50%;
  left: -50%;
  border-radius: 20rpx;
  border: 1px solid rgba(0, 0, 0, .2);
  -webkit-transform-origin: center;
  transform-origin: center;
  -webkit-transform: scale(0.5);
  transform: scale(0.5);
  pointer-events: none;
  box-sizing: border-box;
}
